<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yang.myalarm.SoundMenuActivity">

    <Button

        android:id="@+id/btnSoundFromRecord"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/btn_from_record" />

    <Button
        android:id="@+id/btnSoundFromPC"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="monospace"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:text="@string/btn_from_pc" />

    <Button
        android:id="@+id/btnSoundFromServer"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="30dp"
        android:textSize="18sp"
        android:text="@string/btn_from_server" />

    <Button
        android:id="@+id/btnSoundFromYoutube"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="monospace"
        android:text="@string/btn_from_youtube"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

</LinearLayout>
